module analyzeElec = ElecAnalyzer{
#---------------------------------------------
# sources/steerables
#---------------------------------------------
  InputTag input  = allLayer1Electrons
  InputTag weight = eventWeight

  string hist = "analyzeElec.hist"

  bool doId  = true
  bool doKin = true
  bool doRes = true

#---------------------------------------------
# Id
#---------------------------------------------
  PSet id = { 
    InputTag barrel_shape = hybridSuperClusters:hybridShapeAssoc
    InputTag endcap_shape = islandBasicClusters:islandEndcapShapeAssoc
  }
#---------------------------------------------
# Kinematics
#---------------------------------------------
  PSet kin = { 
    InputTag jets   = allLayer1Jets
    InputTag towers = caloTowers
    InputTag tracks = ctfWithMaterialTracks
    double dRMax    = 0.1
  }
#---------------------------------------------
# Resolution
#---------------------------------------------
  PSet res = { 
    vdouble binsPt  = {0., 20., 30., 50.,  80., 120., 180.}
    double matchDR  = 0.1
  }
}
