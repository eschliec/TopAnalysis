# ----------------------------
# initialize analyzers
# ----------------------------
  module allCuts    = analyzeMuon from "TopAnalysis/TopAnalyzer/data/MuonAnalyzer.cfi"
  module muonCutKin = analyzeMuon from "TopAnalysis/TopAnalyzer/data/MuonAnalyzer.cfi"
  module muonCutIso = analyzeMuon from "TopAnalysis/TopAnalyzer/data/MuonAnalyzer.cfi" 
  module jetsCutKin = analyzeJets from "TopAnalysis/TopAnalyzer/data/JetAnalyzer.cfi"

# ----------------------------
# configure analyzers
# ----------------------------


# ----------------------------
# initialize filters
# ----------------------------
# include "TopAnalysis/TopFilter/data/filterSequences/semiLepMuonSelection_pre.cff"
  include "TopAnalysis/TopFilter/data/filterSequences/semiLepMuonSelection_fin.cff"

   module filterAllCuts = semiLepMuonEvent from "TopAnalysis/TopFilter/data/combinedFilters/SemiLepMuonEventFilter.cfi"
   module filterMuonKin = semiLepMuonEvent from "TopAnalysis/TopFilter/data/combinedFilters/SemiLepMuonEventFilter.cfi"
   module filterMuonIso = semiLepMuonEvent from "TopAnalysis/TopFilter/data/combinedFilters/SemiLepMuonEventFilter.cfi"
   module filterJetsKin = semiLepMuonEvent from "TopAnalysis/TopFilter/data/combinedFilters/SemiLepMuonEventFilter.cfi"

# plots to be monitored
  replace filterMuonKin.useLepEta = false
  replace filterMuonKin.useLepPt  = false
  replace filterMuonIso.useJetIso = false
  replace filterMuonIso.useCalIso = false
  replace filterMuonIso.useTrkIso = false
  replace filterJetsKin.useJetEta = false
  replace filterJetsKin.useJetPt  = false

#
  sequence makeMuonKinematic = {filterMuonKin, muonCutKin}
  sequence makeMuonIsolation = {filterMuonIso, muonCutIso}
  sequence makeJetsKinematic = {filterJetsKin, jetsCutKin}
  sequence makeAllCuts       = {filterAllCuts, allCuts   }
