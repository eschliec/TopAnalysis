#
# isolation filters for semi-leptonic(mu)
#
module filterSemiMuonTrkIsolation = MuonIsolationEventFilter{
  VInputTag input = {selectedLayer1Muons}
  PSet cuts = { using SemiTrkIsolationCut }
  InputTag weight = eventWeight
}

module filterSemiMuonCalIsolation = MuonIsolationEventFilter{
  VInputTag input = {selectedLayer1Muons}
  PSet cuts = { using SemiCalIsolationCut }
  InputTag weight = eventWeight
}

module filterSemiMuonJetIsolation = MuonJetIsolationEventFilter{
  VInputTag input = {selectedLayer1Muons}
  PSet cuts = { using SemiJetIsolationCut }
  InputTag weight = eventWeight
}

